<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ScrollPane?>

<ScrollPane fx:controller="com.kss.studentmanagementdesktopclient.controller.AppController"
            fitToWidth="true"
            fitToHeight="true"
            styleClass="main-scrollpane"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml">

    <BorderPane styleClass="container">

        <!-- Sidebar -->
        <left>
            <fx:include fx:id="sidebar" source="../../component/sidebar.fxml"/>
        </left>

        <!-- Main Content -->
        <center>
            <fx:include fx:id="form" source="../../component/grade-add-form.fxml"/>
        </center>
    </BorderPane>
</ScrollPane>
