<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>

<ScrollPane fx:controller="com.kss.studentmanagementdesktopclient.controller.student.StudentListingController"
            fitToWidth="true"
            fitToHeight="true"
            styleClass="main-scrollpane"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml">

    <BorderPane styleClass="container">
        <!-- Sidebar -->
        <left>
            <fx:include fx:id="sidebar" source="../../component/sidebar.fxml"/>
        </left>

        <center>
            <VBox spacing="20" alignment="TOP_CENTER" styleClass="content">

                <!-- Header Section -->
                <VBox alignment="CENTER" spacing="10">
                    <Label text="Start Manage Your Data" styleClass="title"/>
                    <Label text="Choose what you want to manage" styleClass="subtitle"/>
                    <Button text="Add Student" styleClass="button" onAction="#openAddStudentView"/>
                </VBox>

                <!-- Students Listing Section -->
                <VBox spacing="20" alignment="TOP_CENTER" styleClass="students__listing">
                    <Label fx:id="studentsTitle" text="Students Listing (n)" styleClass="section-title"/>

                    <!-- Student List -->
                    <ListView fx:id="studentListView" styleClass="students__listing-item" />
                </VBox>

            </VBox>
        </center>
    </BorderPane>
</ScrollPane>
