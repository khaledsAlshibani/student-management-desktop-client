<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>

<ScrollPane fx:controller="com.kss.studentmanagementdesktopclient.controller.student.StudentListingController"
            fitToWidth="true"
            fitToHeight="true"
            styleClass="main-scrollpane"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml">

    <BorderPane styleClass="container">
        <!-- Sidebar -->
        <left>
            <VBox alignment="TOP_LEFT" styleClass="sidebar">
                <Label text="Student Management App" styleClass="sidebar__title" wrapText="true"/>
                <VBox styleClass="sidebar__menu">
                    <Label text="Home" styleClass="sidebar-item sidebar-item--selected"/>
                    <Label text="Dashboard" styleClass="sidebar-item"/>
                    <Label text="Manage Students" styleClass="sidebar-item"/>
                    <Label text="Manage Teachers" styleClass="sidebar-item"/>
                    <Label text="Manage Subjects" styleClass="sidebar-item"/>
                    <Label text="Manage Grades" styleClass="sidebar-item"/>
                </VBox>
            </VBox>
        </left>

        <center>
            <VBox spacing="20" alignment="TOP_CENTER" styleClass="content">

                <!-- Header Section -->
                <VBox alignment="CENTER" spacing="10">
                    <Label text="Start Manage Your Data" styleClass="title"/>
                    <Label text="Choose what you want to manage" styleClass="subtitle"/>
                    <Button text="Add Student" styleClass="button" onAction="#openAddStudentView"/>
                </VBox>

                <!-- Students Listing Section -->
                <VBox spacing="20" alignment="TOP_CENTER">
                    <Label fx:id="studentsTitle" text="Students Listing (n)" styleClass="section-title"/>

                    <!-- Student List -->
                    <ListView fx:id="studentListView" styleClass="student-list" />
                </VBox>

            </VBox>
        </center>
    </BorderPane>
</ScrollPane>
