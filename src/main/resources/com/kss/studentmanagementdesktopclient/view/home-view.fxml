<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>

<ScrollPane fx:controller="com.kss.studentmanagementdesktopclient.controller.AppController"
            fitToWidth="true" fitToHeight="true" styleClass="main-scrollpane" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1">
    <BorderPane styleClass="container">
        <!-- Sidebar -->
        <left>
            <VBox alignment="TOP_LEFT" styleClass="sidebar">
                <Label text="Student Management App" styleClass="sidebar__title" wrapText="true"/>
                <VBox styleClass="sidebar__menu">
                    <Label text="Home" styleClass="sidebar-item, sidebar-item--selected"/>
                    <Label text="Dashboard" styleClass="sidebar-item"/>
                    <Label text="Manage Students" styleClass="sidebar-item"/>
                    <Label text="Manage Teachers" styleClass="sidebar-item"/>
                    <Label text="Manage Subjects" styleClass="sidebar-item"/>
                    <Label text="Manage Grades" styleClass="sidebar-item"/>
                </VBox>
            </VBox>
        </left>

        <!-- Main Content -->
        <center>
            <VBox alignment="CENTER" styleClass="home-content">
                <VBox alignment="CENTER" styleClass="home-content__headings">
                    <Label text="Start Manage Your Data" styleClass="home-content__heading"/>
                    <Label text="Choose what you want to manage" styleClass="home-content__subheading"/>
                </VBox>
                <VBox alignment="CENTER" styleClass="home-content__buttons">
                    <Button text="Manage Students" fx:id="manageStudentsButton" styleClass="home-content__button"/>
                    <Button text="Manage Teachers" styleClass="home-content__button"/>
                    <Button text="Manage Subjects" styleClass="home-content__button"/>
                    <Button text="Manage Grades" styleClass="home-content__button"/>
                </VBox>
            </VBox>
        </center>
    </BorderPane>
</ScrollPane>
